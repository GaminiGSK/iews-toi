{
    "hosting": {
        "site": "gksmart-ai-app",
        "public": "client/dist",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [
            {
                "source": "/api/**",
                "run": {
                    "serviceId": "bridge-brain",
                    "region": "asia-southeast1"
                }
            },
            {
                "source": "/socket.io/**",
                "run": {
                    "serviceId": "bridge-brain",
                    "region": "asia-southeast1"
                }
            },
            {
                "source": "**",
                "destination": "/index.html"
            }
        ]
    }
}